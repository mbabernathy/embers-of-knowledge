{{#if doingBattle}}
  {{#if showNewTurn}}
    {{#bs-modal closeAction="rollDice" title="Turn Starting" backdrop=false}}
      <p>Stats so far:</p>
      {{battle-stats battleRecap=false}}
    {{/bs-modal}}
  {{/if}}
  {{#if showDiceInfoModal}}
    {{diceroll-info-popover diceMessages=info.diceMessages}}
  {{/if}}
  {{#if showCombatRecapModal}}
    {{combat-info-popover combatMessages=info.combatMessages}}
  {{/if}}
  {{#if showManaLeftWarning}}
    {{#bs-modal body=false footer=false closeAction="clearManaWarning" submitAction="doBattle" title="Are you sure?" backdrop=false}}
      {{#bs-modal-body}}
        <p>You still have mana remaining to cast spells, and only neutral mana can be carried foward to the next turn</p>
      {{/bs-modal-body}}
      {{bs-modal-footer closeTitle="Go Back" submitTitle="Continue"}}
    {{/bs-modal}}
  {{/if}}
  {{#if showEndBattleModal}}
    {{#bs-modal closeAction="goToStore" title="Battle over" backdrop=true}}
      <p>Your earnings:</p>
      {{battle-stats battleRecap=true}}
    {{/bs-modal}}
  {{/if}}
  <div class="battleframe">
    <h3>This is the Battle Frame</h3>
    <div>
      {{battle-player-info player="Rival" health=game.opponent_life mana=game.opponent_mana}}
    </div>
    <div>
      {{battle-player-creatures creatures=game.opponent_creatures}}
    </div>
    <div>
      <p>Opponent's creatures</p>
      <div style="border: 1px dashed"/>
      <p>Your creatures</p>
    </div>
    <div>
      {{battle-player-creatures creatures=game.player_creatures}}
    </div>
    <div class="battlefooter">
      {{battle-player-info player="Your" health=game.player_life mana=game.player_mana playerInfo=true}}
    </div>
  </div>
  <div class="battlespellbook">
    {{spell-school-picker chooseSpell=(action "setChosenSchool")}}
    {{battle-spellbook chosenSchool=chosenSpellSchool}}
  </div>
{{/if}}
